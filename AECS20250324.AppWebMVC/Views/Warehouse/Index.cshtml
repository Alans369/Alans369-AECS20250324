@model IEnumerable<AECS20250324.AppWebMVC.Models.Warehouse>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-6 text-primary">
                <i class="bi bi-building-fill me-2"></i>Warehouses Management
            </h1>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <form asp-action="Index" class="row g-3 align-items-center">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="ProductName" class="form-label text-muted">Nombre</label>
                        <input type="text" name="ProductName" class="form-control form-control-sm" placeholder="Enter product name" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="TopRegistro" class="form-label text-muted">Cant. Registros</label>
                        <input type="number" name="TopRegistro" class="form-control form-control-sm" placeholder="Number of records" />
                    </div>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <div class="btn-group" role="group">
                        <button type="submit" class="btn btn-primary btn-sm me-2">
                            <i class="bi bi-search me-1"></i>Buscar
                        </button>
                        <a asp-action="Create" class="btn btn-success btn-sm">
                            <i class="bi bi-plus-circle me-1"></i>Ir a crear
                        </a>
                    </div>
                </div>
            </form>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0" id="myTable">
                    <thead class="table-light">
                        <tr>
                            <th>Warehouse Name</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.WarehouseName</td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                            <i class="bi bi-pencil me-1"></i>Edit
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">
                                            <i class="bi bi-info-circle me-1"></i>Details
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                            <i class="bi bi-trash me-1"></i>Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>



    


